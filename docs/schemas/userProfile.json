{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "UserProfile",
  "description": "User profile document",
  "type": "object",
  "required": ["uid", "username", "displayName", "createdAt"],
  "properties": {
    "uid": {
      "type": "string",
      "description": "Firebase Auth user ID"
    },
    "username": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_]{3,20}$",
      "description": "Unique username (3-20 alphanumeric + underscore)"
    },
    "displayName": {
      "type": "string",
      "description": "User's display name"
    },
    "bio": {
      "type": "string",
      "maxLength": 500,
      "description": "User biography (max 500 chars)"
    },
    "photoURL": {
      "type": "string",
      "format": "uri",
      "description": "Profile photo URL"
    },
    "friends": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Array of friend user IDs"
    },
    "blocked": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Array of blocked user IDs"
    },
    "createdAt": {
      "type": "object",
      "description": "Firestore server timestamp"
    },
    "updatedAt": {
      "type": "object",
      "description": "Firestore server timestamp of last update"
    }
  },
  "firestorePath": "/userProfiles/{userId}",
  "securityNotes": [
    "Users can only read/write their own profile",
    "Username must be unique (checked via Cloud Function)",
    "Profile creation happens after Firebase Auth",
    "Friends array updated via transactions"
  ],
  "indexing": {
    "required": [
      { "field": "username", "order": "asc" }
    ]
  }
}
