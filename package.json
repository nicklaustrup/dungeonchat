{
  "name": "dungeonchat",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "emoji-picker-react": "^4.13.3",
    "firebase": "^12.3.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-firebase-hooks": "^5.1.1",
    "react-icons": "^5.5.0",
    "react-scripts": "5.0.1",
    "serve": "^14.2.5",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^8.2.0",
    "@storybook/addon-essentials": "^8.2.0",
    "@storybook/addon-interactions": "^8.2.0",
    "@storybook/preset-create-react-app": "^8.2.0",
    "@storybook/react": "^8.2.0",
    "@storybook/react-webpack5": "^8.2.0",
    "@storybook/testing-library": "^0.2.2",
    "chromatic": "^11.29.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.0",
    "lint-staged": "^15.2.7",
    "semantic-release": "^23.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/release-notes-generator": "^14.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "chromatic --project-token=$CHROMATIC_PROJECT_TOKEN",
    "prepare": "husky install",
  "lint": "eslint . --ext .js,.jsx --quiet",
  "test:ci": "cross-env CI=true react-scripts test --watch=false --passWithNoTests --coverage --coverageReporters=lcov --coverageReporters=text --coverageReporters=json-summary",
    "test:changed": "cross-env CI=true react-scripts test --watch=false --bail --findRelatedTests --passWithNoTests"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "npm run test:changed --"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/src/tests/**/*.{js,jsx}",
          "**/src/**/__tests__/**/*.{js,jsx}",
          "**/src/**/*.{test,spec}.{js,jsx}"
        ],
        "rules": {
          "import/first": "off",
          "testing-library/no-node-access": "off",
          "testing-library/no-unnecessary-act": "off",
          "testing-library/prefer-screen-queries": "warn"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
